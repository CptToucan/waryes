{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "lib": ["es6", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "incremental": true,
    "skipLibCheck": true,


    "declaration": true,
    "declarationMap": true,


    "outDir": "./build/tsc",
    "baseUrl": "/",
    "rootDir": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": ["src/**/*.ts", "images/**/*.ts", "node_modules/@ionic/core/components/*.d.ts", "node_modules/gridstack/dist/es5/types.d.ts", "node_modules/@vaadin/grid/*.d.ts"],
  "exclude": [],
}
